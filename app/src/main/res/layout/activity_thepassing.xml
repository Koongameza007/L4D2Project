<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_18"
    tools:context=".Thepassing">

    <Button
        android:id="@+id/backbt3"
        android:layout_width="132dp"
        android:layout_height="62dp"
        android:layout_marginTop="652dp"
        android:backgroundTint="#B80909"
        android:text="Back"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="349dp"
        android:layout_height="440dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="322dp"
                app:srcCompat="@drawable/_thepassing" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="เป็นเนื้อหาที่เกิดขึ้นระหว่าง Dead Center และ Dark Carnival เหตุเกิดอยู่ในชานเมือง Rayford รัฐจอร์เจีย หนึ่งในการโฆษณาที่มากที่สุดของแคมเปญนี้คือ การพบปะกันระหว่างผู้รอดชีวิตจาก Left 4 Dead 2 และผู้รอดชีวิตสามคนจาก Left 4 Dead อย่างไรก็ตาม ผู้รอดชีวิตดั้งเดิมจะไม่สามารถเล่นได้และมีบทบาทเพียงเล็กน้อยในตอนเริ่มต้นและสิ้นสุดแคมเปญ 	โดยความหมายของ The Passing นี้อาจหมายถึง &quot;การจากไป&quot; ของบิลที่สละชีวิตเพื่อช่วยคนอื่น การตายของบิลและการปรากฏตัวของผู้รอดชีวิตที่เหลือ อธิบายได้ว่าทำไมสโลแกนของแคมเปญคือ &quot;ไม่มีใครอยู่รอดได้ตลอดไป&quot; "
                android:textAlignment="center"
                android:textColor="#F8F8F8"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="The Passing"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>