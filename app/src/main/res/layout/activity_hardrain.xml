<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_18"
    tools:context=".Hardrain">



    <Button
        android:id="@+id/backbt3"
        android:layout_width="132dp"
        android:layout_height="62dp"
        android:layout_marginTop="652dp"
        android:backgroundTint="#B80909"
        android:text="Back"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="349dp"
        android:layout_height="440dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="322dp"
                app:srcCompat="@drawable/_hardrain" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="เป็นแคมเปญที่ห้า ใน Left 4 Dead 2 ที่เกิดขึ้นหลังจาก Swamp Fever ซึ่งตั้งอยู่ในเมืองริมแม่น้ำของ Ducatel รัฐมิสซิสซิปปี้ (เรียกว่า Milltown ในชื่อบท) ในขณะที่พายุเฮอริเคนเข้าใกล้ เวอร์จิลส่งผู้รอดชีวิตจากภารกิจเพื่อค้นหาและนำน้ำมันดีเซลเป็นเชื้อเพลิงสำหรับเรือของเขา ภารกิจคือการเดินทางไปยังปั๊มน้ำมันดูคาเทลดีเซลผ่านเมืองดูคาเทลที่ถูกทิ้งร้าง ซากปรักหักพังของโรงงานน้ำตาลดูคาเทลที่เต็มไปด้วย Witch ไร่อ้อยที่เต็มไปด้วยผู้ติดเชื้อ เมื่อพวกเขามีน้ำมันดีเซลแล้ว พายุเฮอริเคนก็มาถึง และพื้นที่จะน้ำท่วมในทันที ทำให้ผู้รอดชีวิตต้องย้อนรอยเท้าของพวกเขาผ่านน้ำลึกระดับเข่าที่ขัดขวางการเดินทางของพวกเขา ลมพายุและฝนที่ทำให้ทัศนวิสัยลดลงและทำให้การได้ยินยากขึ้น เมื่อพวกเขาไปถึง Ducatel พวกเขาส่งสัญญาณให้ Virgil กลับมารับพวกเขาโดยเปิดป้ายบนหลังคา Burger Tank ที่อยู่ใกล้เคียง ซึ่งจะทำให้แคมเปญจบลง "
                android:textAlignment="center"
                android:textColor="#F8F8F8"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Hard Rain"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>