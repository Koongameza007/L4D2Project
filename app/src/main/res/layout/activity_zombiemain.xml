<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_17"
    tools:context=".Zombiemain">

    <Button
        android:id="@+id/backbt"
        android:layout_width="132dp"
        android:layout_height="62dp"
        android:layout_marginTop="588dp"
        android:backgroundTint="#B80909"
        android:text="Back"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Zombie"
        android:textColor="#F4F4F4"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="358dp"
        android:layout_height="366dp"
        android:layout_marginTop="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/zombie"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:text="Zombie"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/boomer"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:textSize="24sp"
                android:text="Boomer"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/hunter"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:textSize="24sp"
                android:text="Hunter"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/smoker"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:textSize="24sp"
                android:text="Smoker"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/tank"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:textSize="24sp"
                android:text="Tank"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/charger"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:textSize="24sp"
                android:text="Charger"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/jockey"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:textSize="24sp"
                android:text="Jockey"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/spitter"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:textSize="24sp"
                android:text="Spitter"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/witch"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:textSize="24sp"
                android:text="Witch"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>