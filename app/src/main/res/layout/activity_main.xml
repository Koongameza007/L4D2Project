<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_6"
    tools:context=".Main">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="464dp"
        android:layout_marginTop="128dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/survivorbt"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:text="survivor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/zombiebt"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:text="zombie"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/modebt"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:text="mode"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mapbt"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:text="map"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/weaponbt"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:text="weapon"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/logoutmain"
        android:layout_width="136dp"
        android:layout_height="62dp"
        android:layout_marginTop="624dp"
        android:backgroundTint="#C12E2E"
        android:text="Logout"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/namemain"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>