<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_18"
    tools:context=".Theparish">




    <Button
        android:id="@+id/backbt3"
        android:layout_width="132dp"
        android:layout_height="62dp"
        android:layout_marginTop="652dp"
        android:backgroundTint="#B80909"
        android:text="Back"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="349dp"
        android:layout_height="440dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="322dp"
                app:srcCompat="@drawable/_theparish" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="แคมเปญสุดท้ายใน Left 4 Dead 2 และตั้งอยู่ในเมืองนิวออร์ลีนส์ รัฐลุยเซียนา ซึ่งเกี่ยวข้องกับการเดินทางจาก The Waterfront ไปยังจุดอพยพเฮลิคอปเตอร์ทหารที่อยู่อีกฟากหนึ่งของ The Bridge 	เมื่อออกจากเรือของ Virgil ที่ Waterfront Market จะเห็นได้ทันทีว่าเมืองนี้ถูกบุกรุกโดยผู้ติดเชื้อ และกองทัพได้เริ่มดำเนินการตามแผนการที่จะละทิ้งมันทั้งหมด โดยการล่าถอยของพวกเขาคือการทิ้งระเบิดทางอากาศ เพื่อให้ภารกิจเสร็จสมบูรณ์ ผู้รอดชีวิตต้องผ่านเมืองที่เต็มไปด้วยผู้ติดเชื้อ ไม่เพียงแต่สวนอนุสรณ์เท่านั้น แต่ยังรวมถึงศูนย์อพยพ CEDA ที่ถูกบุกรุก ยึดพื้นที่ ทิ้งระเบิดทางด่วน และสุสาน ตอนจบของ Bridge นั้นท้าทายเป็นพิเศษเนื่องจากบังคับให้ผู้รอดชีวิตต้องต่อสู้โดยที่ข้ามสะพานพร้อมกันเพื่อเผชิญกับผู้ติดเชื้อที่บุกรุกเข้ามาอย่างรวดเร็ว หากสำเร็จ ผู้เล่นจะได้รับการอพยพโดยเฮลิคอปเตอร์ของทหารและฉากจบที่ให้เห็นสะพานที่ถูกระเบิด "
                android:textAlignment="center"
                android:textColor="#F8F8F8"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="The Parish"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />







</androidx.constraintlayout.widget.ConstraintLayout>