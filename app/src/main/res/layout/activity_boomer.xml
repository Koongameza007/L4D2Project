<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_21"
    tools:context=".Boomer">

    <Button
        android:id="@+id/backbt3"
        android:layout_width="132dp"
        android:layout_height="62dp"
        android:layout_marginTop="652dp"
        android:backgroundTint="#B80909"
        android:text="Back"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="349dp"
        android:layout_height="440dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="322dp"
                app:srcCompat="@drawable/_20" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ผู้ติดเชื้อพิเศษที่อาเจียนน้ำดีพิเศษออกมาใส่ผู้รอดชีวิตซึ่งจะทำให้พวกเขาตาบอดชั่วคราวและดึงฝูงผู้ติดเชื้อทั่วไปมาให้พวกเขา ในระยะไกล Boomer ไม่ได้เป็นภัยคุกคามมากนักขนาดที่ใหญ่และพลังชีวิตต่ำทำให้พวกมันเป็นเป้าหมายที่ง่ายต่ออาวุธใดๆ ในระยะกลางหรือระยะไกลอย่างไรก็ตาม หากอยู่ในระยะ พวกเขาสามารถอาเจียนใส่ผู้รอดชีวิตเพื่อดึงดูดฝูงชน  เมื่อพวกเขาตายพวกมันจะระเบิด ครอบคลุมผู้รอดชีวิตทุกคนที่อยู่ใกล้พอด้วยน้ำดี ทำให้ตาบอด และทำให้พวกเขาสะดุดถอยหลัง"
                android:textAlignment="center"
                android:textColor="#F8F8F8"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Boomer"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>