<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_18"
    tools:context=".Swampfever">


    <Button
        android:id="@+id/backbt3"
        android:layout_width="132dp"
        android:layout_height="62dp"
        android:layout_marginTop="652dp"
        android:backgroundTint="#B80909"
        android:text="Back"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="349dp"
        android:layout_height="440dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="322dp"
                app:srcCompat="@drawable/_swampfever" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="เป็น Campaign สี่ตอนยาวเกิดขึ้นที่อ่าวและหนองน้ำประเทศลุยเซียนาใกล้กับเมืองกระท่อมที่เรียกว่า Village En Marais 	ตามลำดับเหตุการณ์จาก Dark Carnival และหยิบเรื่องราวของ Survivors ขึ้นมาหลังจากที่ Nick ยิงนักบินเฮลิคอปเตอร์เนื่องจากกลายเป็นผู้ติดเชื้อ เมื่อพวกเขาสะบัดตัวออกหลังจากเหตุเฮลิคอปเตอร์ตก ผู้รอดชีวิตพบว่าตัวเองติดอยู่ที่ห่างไกลด้วยเส้นทางเดียวที่จะไปถึงที่ปลอดภัยได้ โดยต้องผ่านฟาร์มจระเข้ เครื่องบินพาณิชย์ที่ตก หมู่บ้านหนองบึง และสุดท้ายก็อยู่ในสวนร้างที่รอการช่วยเหลือของพวกเขารออยู่ ระหว่างทางพวกเขาได้พบกับมนุษย์โคลนที่ติดเชื้อสายพันธุ์ใหม่ 	Campaign ในตอนจบผู้รอดชีวิตต้องอดทนจนกว่าจะได้รับการช่วยเหลือจากเรือประมงที่มีเวอร์จิลซึ่งเป็นที่ชื่นชอบของทุกคนและมีจิตวิญญาณสาธารณะ "
                android:textAlignment="center"
                android:textColor="#F8F8F8"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Swamp Fever"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>